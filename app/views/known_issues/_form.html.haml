= form_for @known_issue do |f|
  -if @known_issue.errors.any?
    #error_explanation
      %h2= "#{pluralize(@known_issue.errors.count, "error")} prohibited this known_issue from being saved:"
      %ul
        - @known_issue.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
