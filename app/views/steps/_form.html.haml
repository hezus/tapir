= form_for @step do |f|
  -if @step.errors.any?
    #error_explanation
      %h2= "#{pluralize(@step.errors.count, "error")} prohibited this step from being saved:"
      %ul
        - @step.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :index
    = f.text_field :index
  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :authentication_id
    = f.text_field :authentication_id
  .field
    = f.label :example_id
    = f.number_field :example_id
  .actions
    = f.submit 'Save'
